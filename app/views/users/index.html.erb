<h1 class="text-center mb-4">Users</h1>

<!-- Search Form -->
<div class="container mb-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with url: users_path, method: :get, local: true, class: "d-flex" do |form| %>
        <%= form.text_field :search, class: "form-control me-2", placeholder: "Search Users" %>
        <%= form.submit "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

<!-- Users List -->
<div class="container mb-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <% if @users.any? %>
        <ul class="list-group">
          <% @users.each do |user| %>
            <li class="list-group-item">
              <%= link_to user.name, user_path(user), class: 'fw-bold' %> - <%= user.email %>
            </li>
          <% end %>
        </ul>
        <div class="mt-3 text-center">
          <%= paginate @users %>
        </div>
      <% else %>
        <div class="alert alert-warning">No users found.</div>
      <% end %>
    </div>
  </div>
</div>

<div class="text-center mb-4">
  <%= link_to 'View User Map', users_map_path, class: 'btn btn-primary' %>
</div>

